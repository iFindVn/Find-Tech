@using FindTech.Entities.Models
@using FindTech.Entities.Models.Enums
@using FindTech.Web.Models
@using FindTech.Web.Models.Enums
@{
    var hotArticles = (IEnumerable<ArticleViewModel>)ViewBag.HotArticles;
    var latestReviews = (IEnumerable<ArticleViewModel>)ViewBag.LatestReviews;
    var popularReviews = (IEnumerable<ArticleViewModel>)ViewBag.PopularReviews;
}
<div ng-controller="HomeCtrl">
    <div class="banner-set load">
        <div class="container">
            <div class="banners">
                <a on-last-repeat ng-repeat="article in hotArticles.Articles" ng-attr-href="/bai-viet/{{article.ArticleCategorySeoName}}/{{article.SeoTitle}}" class="banner">
                    <div class="box">
                        <img ng-src="{{article.SquareAvatar}}" width="275" height="275" alt="">
                        <div class="overlay">
                            <h2 class="title">{{article.Title}}</h2>
                            <div class="description" ng-bind-html="article.Description | html"></div>
                        </div>
                    </div>
                </a>
            </div><!-- .banners -->
            <div class="clearfix"></div>
        </div>
        <div class="nav-box">
            <div class="container">
                <a class="prev" href="#"><span class="glyphicon glyphicon-arrow-left"></span></a>
                <a class="next" href="#"><span class="glyphicon glyphicon-arrow-right"></span></a>
            </div>
        </div>
    </div><!-- .banner-set -->
    <section id="main">
        <div class="container">
            <div class="content">
                <div class="row">
                    <div class="col-sm-12 col-md-9">
                        <large-slider-box model="latestReviews"></large-slider-box>
                        @*@{Html.RenderPartial("_LargeSliderBox", new ArticleListViewModel { Articles = latestReviews, Title = "Đánh giá & So sánh" });}*@
                        <article class="content">
                            <div class="bottom-padding bottom-padding-mid load overflow">
                                <div class="title-box no-margin">
                                    <h2 class="title">Tin Tức</h2>
                                </div>

                                <div class="clearfix"></div>

                                <div class="row articles" isotope-container="isotope-container">
                                    <div ng-repeat="article in latestNewses.Articles" isotope-item class="col-sm-6 col-md-3">
                                        <div class="article">
                                            <div class="default">
                                                <a ng-attr-href="/bai-viet/{{article.ArticleCategorySeoName}}/{{article.SeoTitle}}" class="article-avatar">
                                                    <img ng-src="{{article.Avatar}}" alt="" title="" width="270" height="270">
                                                </a>
                                                <div class="article-description">
                                                    <a ng-attr-href="/bai-viet/{{article.ArticleCategorySeoName}}/{{article.SeoTitle}}" class="title">{{article.Title}}</a>
                                                    <div class="posted-info"><span class="blurry-text">Đăng:</span><strong> {{article.PublishedDate | moment}}, <span class="blurry-text">bởi</span> {{article.CreatedUserDisplayName}}</strong></div>
                                                    <div class="description" ng-bind-html="article.Description | html"></div>
                                                </div>
                                                <div class="social" ng-attr-style="border-top-color: {{article.ArticleCategoryColor}}">
                                                    <span class="opinion"><span ng-class="article.HighestOpinionBackground">{{article.HighestOpinionText}}</span></span>
                                                    <a class="fa fa-eye" ng-attr-href="/bai-viet/{{article.ArticleCategorySeoName}}/{{article.SeoTitle}}"><span class="count">{{article.ViewCount}}</span></a>
                                                    <a class="fa fa-comments" ng-attr-href="/bai-viet/{{article.ArticleCategorySeoName}}/{{article.SeoTitle}}"><span class="count">{{article.CommentCount}}</span></a>
                                                    <a ng-class="'fa fa-thumb-tack ' + getPinnedClass(article.ArticleId)" href="#" data-article-id="{{article.ArticleId}}" onclick="pinArticle($(this)); return false;"></a>
                                                </div>
                                            </div>
                                        </div><!-- .article -->
                                    </div>
                                </div>

                                <div class="clearfix"></div>

                                <div class="load-more-wrapper">
                                    <button ladda="loadMoreLoading" ng-click="loadMoreNewses()" data-style="zoom-out" class="btn load-more unclicked">
                                        Xem thêm
                                    </button>
                                    @*<div ng-click="loadMoreNewses()" class="btn load-more unclicked load">
                                        Load more
                                        <span class="livicon loading" data-name="spinner-three" data-c="#ffffff" data-hc="#ffffff" data-s="22" data-loop="true"></span>
                                        <span class="livicon" data-name="angle-double-down" data-s="22" data-c="#ffffff" data-hc="#ffffff" data-loop="true"></span>
                                    </div>*@
                                </div>
                            </div><!-- .carousel-box -->
                        </article>
                        <article class="content">
                            <div class="bottom-padding bottom-padding-mid">
                                <div class="title-box">
                                    <h2 class="title">YouTube</h2>
                                </div>
                                <div class="video-box youtube">
                                    <iframe frameborder="0" allowfullscreen="" src="//www.youtube.com/embed/oNBBijn4JuY?showinfo=0&amp;wmode=opaque"></iframe>
                                </div>
                            </div>
                        </article>
                        <mini-slider-box model="trickAndTipArticles"></mini-slider-box>
                        @*@{Html.RenderAction("_Widget", "Article", new { articleListViewModel = new ArticleListViewModel { WidgetType = WidgetType.MiniSlider, Title = "Thủ thuật" }, searchType = SearchType.Category, keyword = "tin-tong-hop" });}*@
                    </div>
                    <div class="sidebar col-sm-12 col-md-3">
                        <div class="row">
                            <mini-list-box model="pinnedArticles"></mini-list-box>
                            <mini-list-box model="productAndTechToyArticles"></mini-list-box>
                            <mini-list-box model="brandAndDigiLifeArticles"></mini-list-box>
                            <mini-list-box model="appAndGameArticles"></mini-list-box>
                            @*@{Html.RenderAction("_Pinned", "Article", new { articleListViewModel = new ArticleListViewModel { WidgetType = WidgetType.MiniList, Title = "Đã ghim", TitleStyleClass = "fa fa-thumb-tack background-warning", ClientId = "pinnedArticles" } });}*@
                            @*@{Html.RenderPartial("_MiniListBox", new ArticleListViewModel { Articles = popularReviews, Title = "Đánh giá phổ biến", TitleStyleClass = "fa fa-eye background-primary" });}*@
                            <aside class="widget facebook-widget col-sm-6 col-md-12">
                                <header>
                                    <h3 class="title">Facebook</h3>
                                </header>
                                <div id="fb-root"></div>
                                <div class="fb-like-box" data-href="https://www.facebook.com/ifind.vn" data-width="270" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="true"></div>
                            </aside><!-- .facebook-widget -->
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div><!-- .content -->
        </div>
    </section><!-- #main -->
</div>
