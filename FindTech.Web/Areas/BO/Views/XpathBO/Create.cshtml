
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/BO/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<div class="breadcrumb-box">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index", "XpathBO")">BO</a> </li>
            <li><a href="@Url.Action("Index", "XpathBO")">Xpath BO</a></li>
            <li class="active">Create</li>
        </ul>
    </div>
</div>
<div class="clearfix"></div>
<section id="main">
    <div class="container">
        <div class="content">
            <form role="form" method="POST" action="CreateXpath">
                <div class="row">

                    <div class="col-xs-6 col-md-9">

                        <div class="form-group">
                            <label for="xpathString">Đường dẫn</label>
                            <input type="text" class="form-control" id="xpathString" name="XpathString" placeholder="Đường dẫn" />
                        </div>

                        <div class="form-group">
                            <label for="articleField">Tên trường article</label>
                            <input type="text" class="form-control" id="articleField" name="ArticleField" placeholder="Tên trường article" />
                        </div>

                        <label for="sourceId">Nguồn</label>
                        <input type="text" class="form-control" id="sourceId" name="SourceId" value="" placeholder="Nguồn">
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-3 col-md-12">
                        <button type="submit" class="btn btn-primary">Click để tạo XPath</button>
                    </div>

                </div>

            </form>
        </div><!-- .content -->
    </div>
</section><!-- #main -->



