        <script>
            $(document).ready(function () {
                var window = $("#imgWindow");
                if (!window.data("kendoWindow")) {
                    window.kendoWindow({
                        width: "800px",
                        title: "Image Management",
                        apply: function () {
                            window.data("kendoWindow").close();
                        }
                    });
                }
                window.data("kendoWindow").close();
            });

            function applyImageBrowser(button, sendSelectedImage) {
                var window = $("#imgWindow");
                button.bind("click", function () {
                    var thisButton = $(this);
                    $('#imgBrowser').remove();
                    window.append('<div id="imgBrowser"></div>');
                    window.data("kendoWindow").open();
                    window.data("kendoWindow").center();

                    $("#imgBrowser").kendoImageBrowser({
                        transport: {
                            read: "/ImageBO/Read",
                            destroy: {
                                url: "/ImageBO/Destroy",
                                type: "POST"
                            },
                            create: {
                                url: "/ImageBO/Create",
                                type: "POST"
                            },
                            thumbnailUrl: "/ImageBO/Thumbnail",
                            uploadUrl: "/ImageBO/Upload",
                            imageUrl: "/ImageBO/Image?path={0}"
                        },
                        apply: function () {
                            var imageName = $("#imgBrowser .k-state-selected strong").text();
                            var imageUrl = "/ImageBO/Image?path=" + $("#imgBrowser input[data-role='breadcrumbs']").val() + $("#imgBrowser .k-state-selected strong").text();
                            var thumbnailUrl = "/ImageBO/Thumbnail?path=" + $("#imgBrowser input[data-role='breadcrumbs']").val() + $("#imgBrowser .k-state-selected strong").text();
                            sendSelectedImage(imageName, imageUrl, thumbnailUrl, thisButton);
                            window.data("kendoWindow").close();
                        }
                    });
                });
            }
        </script>
